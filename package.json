{
  "name": "shadow-goose-frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:ci": "jest --coverage",
    "test:css": "jest __tests__/css-loading.test.js",
    "verify-css": "npm run build && npm run test:css",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "typecheck:strict": "tsc --noEmit --strict",
    "typecheck:script": "./scripts/check-typescript.sh",
    "prebuild": "npm run typecheck",
    "predeploy": "npm run typecheck && npm run lint",
    "verify-all": "npm run typecheck && npm run lint && npm run test && npm run build",
    "monitor": "./scripts/monitor-deployment.sh monitor",
    "health": "./scripts/monitor-deployment.sh health",
    "build-id": "./scripts/monitor-deployment.sh build-id",
    "deploy": "npm run verify-all && git add . && git commit --no-verify -m \"ðŸš€ Auto-deploy $(date)\" && git push origin main && npm run monitor"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.13",
    "autoprefixer": "^10.4.21",
