    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/ws": "^8.18.1",
    "babel-jest": "^30.0.5",
    "eslint": "^8",
    "eslint-config-next": "14.2.31",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "typescript": "^5"
  }
