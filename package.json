    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "next": "^14.2.31",
    "node-fetch": "^2.7.0",
    "postcss": "^8.5.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "^3.4.17",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
