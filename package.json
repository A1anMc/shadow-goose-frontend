{
  "name": "shadow-goose-frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:ci": "jest --coverage",
    "test:css": "jest __tests__/css-loading.test.js",
    "verify-css": "npm run build && npm run test:css",
    "typecheck": "tsc --noEmit",
    "monitor": "./scripts/monitor-deployment.sh monitor",
    "health": "./scripts/monitor-deployment.sh health",
    "build-id": "./scripts/monitor-deployment.sh build-id",
    "deploy": "npm run verify-css && git add . && git commit --no-verify -m \"ðŸš€ Auto-deploy $(date)\" && git push origin main && npm run monitor"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": { "branches": 80, "functions": 80, "lines": 80, "statements": 80 }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "pages/**/*.{ts,tsx,js,jsx}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ]
  },
  "dependencies": {
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "next": "^14.2.31",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.31",
    "jest": "^29.7.0",
    "typescript": "^5"
  }
}
